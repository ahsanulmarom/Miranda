<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_accomplis"
        app:border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:id="@+id/relative_nama"
        android:layout_alignBaseline="@+id/relativeLayout"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:id="@+id/label_nama"
            android:textSize="17dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Teh Hutan"
            android:layout_below="@id/label_nama"
            android:textSize="25dp"
            android:textColor="#fff"
            android:id="@+id/isi_nama"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/relativeLayout"
        android:layout_marginEnd="51dp"
        android:layout_below="@+id/profile_image"
        android:layout_alignParentEnd="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age"
            android:id="@+id/label_umur"
            android:textSize="17dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:layout_below="@id/label_umur"
            android:textSize="25dp"
            android:id="@+id/data_umur"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="years"
            android:layout_toRightOf="@id/data_umur"
            android:layout_below="@+id/label_umur"
            android:textSize="18dp"
            android:id="@+id/data_umur_ket"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_alignBaseline="@+id/relativeLayout3"
        android:layout_alignBottom="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relative_nama">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="weight"
            android:id="@+id/label_berat"
            android:textSize="17dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:layout_below="@id/label_berat"
            android:textSize="25dp"
            android:id="@+id/data_berat"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:layout_toRightOf="@id/data_berat"
            android:layout_below="@+id/label_berat"
            android:textSize="22dp"
            android:id="@+id/data_berat_ket"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/relative_nama"
        android:layout_alignStart="@+id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sex"
            android:id="@+id/label_gender"
            android:textSize="17dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="male"
            android:layout_below="@id/label_gender"
            android:textSize="25dp"
            android:id="@+id/gender"
            android:textColor="#fff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/edit_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_24dp"
            android:background="@drawable/bg_edit_profile_icon"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:tint="#fff"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>